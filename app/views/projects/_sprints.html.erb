<table id="sprints-table" class="table table-striped table-bordered" width="100%">
  <thead>
    <tr>
      <th>Number</th>
      <th>Date</th>
      <th>Hours</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% sprints.each do |sprint| %>
    <tr>
      <td><%= sprint.number %></td>
      <td><%= sprint.date %></td>
      <td><%= sprint.hours %></td>
      <td>
        <%= link_to edit_sprint_path(project), remote: true,
          class: 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to sprint_delete_path(project), remote: true,
          class: 'btn btn-danger btn-sm' do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(document).ready(function() {
     $('#projects-table').DataTable({
       retrieve: true,
       iDisplayLength: 50,
       columns: [
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { orderable: false }
       ]
    });
  });
</script>
