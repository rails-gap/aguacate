$("ul.errors").html("")
<% if project.errors.any? %>
  <% project.errors.full_messages.each do |message| %>
    $("div.errors").append($("<div class='alert alert-danger'/>").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $("#projects-content").html("<%= escape_javascript(render 'index', projects: projects) %>");
  $("#projects-modal").modal("hide");
<% end %>
