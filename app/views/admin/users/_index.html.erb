<table id="users-table" class="table table-striped table-bordered" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Sign In Count</th>
      <th>Last Sign In At</th>
      <th>Admin?</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% users.each do |user| %>
    <tr class="<%= 'warning' unless user.active %>">
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.sign_in_count %></td>
      <td><%= user.last_sign_in_at.localtime %></td>
      <td><%= user.admin? ? 'Yes' : 'No' %></td>
      <td>
        <% if user != current_user %>
          <%= link_to edit_admin_user_path(user), remote: true,
            class: 'btn btn-default btn-sm' do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(document).ready(function() {
     $('#users-table').DataTable({
       retrieve: true,
       iDisplayLength: 50,
       columns: [
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { type: "string" },
         { orderable: false }
       ]
    });
  });
</script>
